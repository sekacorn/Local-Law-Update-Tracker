#!/bin/bash
# LLUT Backend Sidecar Wrapper for Linux
# This script is executed by Tauri as a sidecar process

# Get the Tauri resources directory
RESOURCE_DIR="$(cd "$(dirname "$0")/../.." && pwd)"

# Start the backend server
cd "$RESOURCE_DIR"
python3 -m uvicorn app.main:app --host 127.0.0.1 --port 8000
