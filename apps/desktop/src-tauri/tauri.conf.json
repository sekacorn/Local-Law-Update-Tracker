{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "LLUT",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "llut-backend",
            "sidecar": true,
            "args": false
          }
        ]
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://localhost:8000/**"]
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "scope": ["$APPDATA/*", "$APPDATA/**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.llut.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icon.ico"
      ],
      "resources": [
        "../../backend/app/**",
        "../../backend/requirements.txt"
      ],
      "externalBin": [
        "binaries/llut-backend-x86_64-pc-windows-msvc.bat",
        "binaries/llut-backend-x86_64-apple-darwin",
        "binaries/llut-backend-x86_64-unknown-linux-gnu"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "LLUT - Local Law Update Tracker",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  }
}
